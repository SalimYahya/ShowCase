@using ShowCase.Views.Shared.Components.SearchBar
@model SearchPager

<div class="row mb-2 pt-3">

    <div class="d-flex col-lg-2 justify-content-lg-start col-md-3 justify-content-md-start col-sm-6">
        @Model.TotalItems Results
    </div>
    
    <div class="d-flex col-lg-3 justify-content-lg-center col-md-3 justify-content-md-center col-sm-12">
        <form asp-controller="@Model.Controller" asp-action="@Model.Action">
            <div class="input-group mb-3">
                <input type="text" name="SearchText" class="form-control"
                       value="@Model.SearchText" placeholder="@localizer["Search Product"]"
                       aria-label="Search Product">
                <div class="input-group-append">
                    <button class="btn btn-primary" type="submit">
                        <i class="fas fa-search text-white"></i>
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>