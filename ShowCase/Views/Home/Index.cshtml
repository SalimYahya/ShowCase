@using ShowCase.Views.Shared.Components.SearchBar

@model IEnumerable<ShowCase.Models.Product>

@{
    ViewData["Title"] = "Home Page";

    SearchPager searchPager = new SearchPager();

    int pageNo = 0;
    if (ViewBag.SearchPager != null)
    {
        searchPager = ViewBag.SearchPager;
        pageNo = searchPager.CurrentPage;
    }

}

<!-- Filter: Search, Pagination -->
<vc:search-bar search-pager="@ViewBag.SearchPager" bottom-bar="false"></vc:search-bar>

<!-- Products List -->
<div class="row">
    <div class="col-lg-12 col-md-12">
        <div class="row">
            @if (Model.Count() > 0)
            {

                @foreach (var product in Model)
                {
                    <div class="col-lg-2 col-md-4 col-sm-6 mb-3">
                        <partial name="_DisplayProductPartial" model="product" />
                    </div>
                }
            }
            else
            {
                <div class="text-center">
                    <h3 class="text-danger">No Products Available Yet !!!</h3>
                </div>
            }
        </div>
    </div>
</div>

<!-- BottoBar -->
<vc:search-bar search-pager="@ViewBag.SearchPager" bottom-bar="true"></vc:search-bar>
