@model IEnumerable<ShowCase.Models.Product>

@{
    ViewData["Title"] = "Home Page";
}


<div class="row">
    <div class="col-lg-12 col-md-12">
        <div class="row">
            @if (Model.Count() > 0)
            {
                var imagePath = "~/images/no_image.png";

                @foreach (var product in Model)
                {
                    <div class="col-lg-3 col-md-4 mb-2">
                        <div class="card border border-bottom-0 border-left-0 border-right-0 bg-white shadow-sm">

                            <img src="@imagePath" asp-append-version="true"
                                 class="img-fluid"/>

                            <div class="card-body">

                                <div class="text-center">
                                    <h4 class="card-title text-primary">@product.Name</h4>
                                    <p class="text-secondary">@product.Description</p>
                                </div>

                                <div class="row d-flex w-100 p-0 m-0">
                                    
                                    <button name="AddToCart"
                                            id="btnAddToCart" itemid="@product.Id"
                                            onclick="AddToCart(this)"
                                            class="btn btn-danger mr-auto px-2 py-0">
                                        <i class="fas fa-shopping-cart text-white"></i>
                                    </button>

                                    <h6 class="text-warning ml-auto"><strong>@product.Price SAR</strong></h6>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
               <div class="text-center">
                   <h3 class="text-danger">No Products Available Yet !!!</h3>
               </div>
            }
        </div>
    </div>
</div>


@section Scripts{
    <script type="text/javascript">
        
    </script>
}