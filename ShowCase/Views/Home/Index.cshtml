@model IEnumerable<ShowCase.Models.Product>

@{
    ViewData["Title"] = "Home Page";
}


<div class="row">
    <div class="col-lg-12 col-md-12">
        <div class="row">
            @if (Model.Count() > 0)
            {
                var imagePath = "~/images/no_image.png";

                @foreach (var product in Model)
                {
                    <div class="col-lg-3 col-md-4 mb-2">
                        <partial name="_DisplayProductPartial" model="product">
                    </div>
                }
            }
            else
            {
               <div class="text-center">
                   <h3 class="text-danger">No Products Available Yet !!!</h3>
               </div>
            }
        </div>
    </div>
</div>
