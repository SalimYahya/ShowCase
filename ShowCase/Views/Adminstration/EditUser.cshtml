@model ShowCase.ViewModel.Role.EditUserViewModel

<h1>Edit Role</h1>

<form method="post" class="mt-3">

        
    <input asp-for="User.Id" hidden />

    <div class="form-group row">
        <label asp-for="User.UserName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="User.UserName" disabled class="form-control" />
            <span asp-validation-for="User.UserName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="User.FirstName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="User.FirstName" class="form-control" />
            <span asp-validation-for="User.FirstName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="User.LastName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="User.LastName" class="form-control" />
            <span asp-validation-for="User.LastName" class="text-danger"></span>
        </div>
    </div>

    <div class="text-danger" asp-validation-summary="ModelOnly"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="UsersList">Cancel</a>
        </div>
    </div>


    <div class="card mt-3">
        <div class="card-header">
            <h3>User's Roles</h3>
        </div>
        <div class="card-body">
            @if (Model.Roles.Any())
            {
                @foreach (var role in Model.Roles)
                {
                    <h5 class="card-title">@role</h5>
                }
            }
            else
            {
                <h5 class="cart-title">Non at the moment</h5>
            }
        </div>
        <div class="card-footer">
            <a asp-action="ManageUserRoles"
               asp-route-userId="@Model.User.Id" class="btn btn-primary">
                Manage Roles
            </a>
        </div>
    </div>

    <div class="card mt-3">
        <div class="card-header">
            <h3>User's Claims</h3>
        </div>
        <div class="card-body">
            @if (Model.Claims.Any())
            {
                @foreach (var claim in Model.Claims)
                {
                    <h5 class="card-title">@claim</h5>
                }
            }
        </div>
        <div class="card-footer">
            <a asp-action="ManageUserclaims"
               asp-route-userId="@Model.User.Id" class="btn btn-primary">
                Manage Claims
            </a>
        </div>
    </div>

</form>