             x:Class="CrossPlatformApp.Views.Template.CardViewTemplate">
  <ContentView.Content>
        <Frame IsClippedToBounds="True"
               HasShadow="True"
               Padding="0"
               CornerRadius="10"
               BackgroundColor="White">
            <!--<Frame.BorderColor>
